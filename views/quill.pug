doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='https://cdn.quilljs.com/1.3.6/quill.snow.css', rel='stylesheet')
    script(type='text/javascript', src='dist/quill.js', async='true')
    
    title Document
  body
    include components/navbar.pug
    .container-fluid
      .row
        .col-lg-3.py-3.overflow-y-scroll.d-none(id="history") 
          button.btn.btn-primary.px-3.mb-2(id='close-history') Tutup
        .col(id="text-editor")
          //- open history button
          include ./components/history_button.pug
          h5.document-name.py-3 #{docName} 
          .document-room-id( id= roomId)
          p Document ID : #{roomId}
          .user-name( id = user)
          #editor(style = "min-height: 50vh; padding-top:1.2em; padding-botto:1.2em")
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script(src='public/script/history.js')